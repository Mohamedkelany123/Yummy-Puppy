@PACKAGE_INIT@
set(LIB_NAME "@LIB_NAME@")
set(${LIB_NAME}_INCLUDE_DIR "@PACKAGE_INCLUDE_DIR@")
set(${LIB_NAME}_INCLUDE_DIRS "@PACKAGE_INCLUDE_DIR@")

# Validation logic to ensure the installation is correct
foreach(DIR "@DIR_NAMES@")
    set(MY_DIR ${${LIB_NAME}_INCLUDE_DIR}/${DIR})
    if(NOT EXISTS "${MY_DIR}")
        message(FATAL_ERROR "Required directory ${MY_DIR} is missing. Installation validation failed.")
    endif()
    list(APPEND ${LIB_NAME}_INCLUDE_DIRS ${MY_DIR})
endforeach()

message(STATUS "All required directories and files are present for ${LIB_NAME}.")

check_required_components(${LIB_NAME})